<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="default_movie_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/material_default_margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/material_default_margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/material_default_margin_8dp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="default_movie_release_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/material_default_margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/material_default_margin_8dp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/secondary_text_color</item>

    </style>

    <style name="default_movie_genre">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/material_default_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/material_default_margin_8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>
</resources>
