<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/error_message_empty_list"
        style="@style/default_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/error_message_no_movies"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_image_empty_list"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/error_image_empty_list"
        android:layout_width="@dimen/sad_popcorn_width_empty_list"
        android:layout_height="@dimen/sad_popcorn_height_empty_list"
        android:src="@drawable/no_movies"
        android:contentDescription="@string/content_description_sad_popcorn_empty_list"
        app:layout_constraintBottom_toTopOf="@id/error_message_empty_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
